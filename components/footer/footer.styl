	left: 0;
	box-shadow: 0 -1px 10rpx #f0f0f0;
    flex-lra();
	z-index: 100;
	.footer_li {
		flex: 1;
		flex-ajd();
		.footer_li_img {
			flex-a();
			width: 44rpx;
			height: 44rpx;
			img {
				// vertical-align: middle;
				width: 100%;
				height: 100%;
				transiton: all 300ms;
			}
			text {
				display: block;
